<merge
    xmlns:latin="http://schemas.android.com/apk/res/com.sugree.inputmethod.latin"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <Key
                latin:keyLabel="&#x0E1C;" />
            <Key
                latin:keyLabel="&#x0E09;" />
            <Key
                latin:keyLabel="&#x0E2E;" />
            <Key
                latin:keyLabel="&#x0E3A;" />
            <Key
                latin:keyLabel="&#x0E4C;" />
            <Key
                latin:keyLabel="&#x0E12;" />
            <Key
                latin:keyLabel="&#x0E2C;" />
            <Key
                latin:keyLabel="&#x0E26;" />
        </case>
        <default>
            <Key
                latin:keyLabel="&#x0E1B;"
                latin:keyHintLabel="&#x0E1C;" />
            <Key
                latin:keyLabel="&#x0E41;"
                latin:keyHintLabel="&#x0E09;" />
            <Key
                latin:keyLabel="&#x0E2D;"
                latin:keyHintLabel="&#x0E2E;" />
            <Key
                latin:keyLabel="&#x0E34;"
                latin:keyHintLabel="&#x0E3A;" />
            <Key
                latin:keyLabel="&#x0E37;"
                latin:keyHintLabel="&#x0E4C;" />
            <Key
                latin:keyLabel="&#x0E17;"
                latin:keyHintLabel="&#x0E12;" />
            <Key
                latin:keyLabel="&#x0E21;"
                latin:keyHintLabel="&#x0E2C;" />
            <Key
                latin:keyLabel="&#x0E43;"
                latin:keyHintLabel="&#x0E1D;" />
        </default>
    </switch>
</merge>
