<merge
    xmlns:latin="http://schemas.android.com/apk/res/com.sugree.inputmethod.latin"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <Key
                latin:keyLabel="1" />
            <Key
                latin:keyLabel="2" />
            <Key
                latin:keyLabel="3" />
            <Key
                latin:keyLabel="4" />
            <Key
                latin:keyLabel="5"
 				latin:moreKeys="&#x0E3F;"/>
            <Key
                latin:keyLabel="6" />
            <Key
                latin:keyLabel="7" />
            <Key
                latin:keyLabel="8" />
            <Key
                latin:keyLabel="9" />
            <Key
                latin:keyLabel="0" />
        </case>
        <default>
            <Key
                latin:keyLabel="&#x0E20;"
                latin:keyHintLabel="1" />
            <Key
                latin:keyLabel="&#x0E16;"
                latin:keyHintLabel="2" />
            <Key
                latin:keyLabel="&#x0E38;"
                latin:keyHintLabel="3" />
            <Key
                latin:keyLabel="&#x0E39;"
                latin:keyHintLabel="4" />
            <Key
                latin:keyLabel="&#x0E36;"
                latin:keyHintLabel="5" />
            <Key
                latin:keyLabel="&#x0E04;"
                latin:keyHintLabel="6"
 				latin:moreKeys="&#x0E05;" />
            <Key
                latin:keyLabel="&#x0E15;"
                latin:keyHintLabel="7" />
            <Key
                latin:keyLabel="&#x0E08;"
                latin:keyHintLabel="8" />
            <Key
                latin:keyLabel="&#x0E02;"
                latin:keyHintLabel="9"
 				latin:moreKeys="&#x0E03;" />
            <Key
                latin:keyLabel="&#x0E0A;"
                latin:keyHintLabel="0" />
        </default>
    </switch>
</merge>
